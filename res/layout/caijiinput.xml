<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="#ff87ceeb" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@+id/loginrelative1" 
        android:background="#ffadd8e6" 
        android:layout_width="fill_parent" 
        android:layout_height="80.0dip">
        <TextView android:textSize="30.0dip" 
            android:id="@+id/caijihint" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_centerHorizontal="true" 
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <RelativeLayout android:id="@+id/loginrelative2" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" 
        android:layout_margin="50.0dip" 
        android:layout_below="@id/loginrelative1">
        <EditText android:id="@+id/caijiinput" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="15.0dip" 
            android:layout_marginTop="20.0dip" 
            android:layout_marginRight="15.0dip" 
            android:inputType="number" />
        <EditText android:id="@+id/commondType" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="15.0dip" 
            android:layout_marginTop="20.0dip" 
            android:layout_marginRight="15.0dip" 
            android:inputType="number" 
            android:layout_below="@id/caijiinput"/>            
        <EditText android:id="@+id/meterinput" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="15.0dip" 
            android:layout_marginTop="20.0dip" 
            android:layout_marginRight="15.0dip" 
            android:inputType="number" 
            android:layout_below="@id/commondType"/>                 
        <Button android:textColorHint="#ffdb7093" 
            android:id="@+id/caijibt" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="15.0dip" 
            android:layout_marginTop="15.0dip" 
            android:layout_marginRight="15.0dip" 
            android:layout_below="@id/meterinput" />
        <TextView
            android:id="@+id/showtxt" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_centerHorizontal="true" 
            android:layout_centerVertical="true" 
            android:layout_below="@id/caijibt" 
            android:text="命令类型；1-PIC_CC1101表，2-PIC_1278表，3-MSP-1278表"/>        
    </RelativeLayout>
</RelativeLayout>